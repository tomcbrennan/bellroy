---
import chevron from '../assets/media/chevron-down.svg'

const links = [
	{ title: 'Featured', href: '#' },
	{ title: 'Bags', href: '#' },
	{ title: 'Wallets', href: '#' },
	{ title: 'Accessories', href: '#' },
	{ title: 'Tech', href: '#' },
	{ title: 'Travel', href: '#' },
	{ title: 'About Us', href: '#' },
]
---

<ul class="navigation">
	{
		links.map((link) => (
			<li class="menu-item">
				<a href={link.href} class="menu-link group">
					<div>{link.title}</div>
					<img
						src={chevron.src}
						class="opacity-30 duration-100 group-hover:opacity-100"
						width="12"
						height="12"
						alt="Dropdown"
					/>
				</a>
			</li>
		))
	}
</ul>
